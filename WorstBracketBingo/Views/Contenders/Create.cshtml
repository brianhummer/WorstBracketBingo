@model WorstBracketBingo.Models.Contender

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Contender</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EntrantID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EntrantID" class ="form-control" asp-items="ViewBag.EntrantID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BracketID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BracketID" class="form-control" />
