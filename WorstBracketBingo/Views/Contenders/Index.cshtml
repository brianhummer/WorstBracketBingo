@model IEnumerable<WorstBracketBingo.Models.Contender>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BracketID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Eliminated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoundsAlive)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BracketID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eliminated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoundsAlive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrant.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContenderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContenderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContenderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
