@model IEnumerable<WorstBracketBingo.Models.Bracket>

@{
    ViewData["Title"] = "Home";
}

<img class="img-fluid rounded" src="~/images/salt.jpg" />
<div class="row">
    <div class="col-md-12 mt-3">
        <h2>Current Brackets</h2>
        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Brackets" asp-action="Results" asp-route-id="@item.BracketID"><h5 class="mb-1">@Html.DisplayFor(modelItem => item.Title)</h5></a>
                        </td>
                        <td>
                            <a asp-controller="Brackets" asp-action="Manage" asp-route-id="@item.BracketID">Manage</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>