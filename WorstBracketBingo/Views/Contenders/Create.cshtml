                <input asp-for="RoundsAlive" class="form-control" />
                <span asp-validation-for="RoundsAlive" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
